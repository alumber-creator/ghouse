# Приложение
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your_secret_key_change_in_production
APP_HOST=0.0.0.0
APP_PORT=8000

# База данных
DATABASE_URL=postgresql+asyncpg://ghouse:ghouse_password@localhost:5432/ghouse
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=ghouse

# JWT
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRE=3600
JWT_REFRESH_EXPIRE=604800
JWT_ALGORITHM=HS256

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_WEBHOOK_URL=https://api.ghouse.local/api/v1/webhooks/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# MQTT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=ghouse
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=ghouse_backend

# CORS
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://ghouse.local

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json

# Резервное копирование
BACKUP_DIR=/app/backups
